<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controllers.ProductController">
    <children>
        <TableView fx:id="produitTable" layoutX="14.0" layoutY="14.0" prefHeight="320.0" prefWidth="572.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID"/>
                <TableColumn fx:id="nomColumn" prefWidth="75.0" text="Nom"/>
                <TableColumn fx:id="descriptionColumn" prefWidth="75.0" text="Description"/>
                <TableColumn fx:id="prixColumn" prefWidth="75.0" text="Prix"/>
                <TableColumn fx:id="quantiteColumn" prefWidth="75.0" text="Quantite"/>
            </columns>
        </TableView>
        <HBox layoutX="14.0" layoutY="346.0" prefHeight="33.0" prefWidth="572.0">
            <children>
                <TextField fx:id="idField" prefWidth="75.0" promptText="ID"/>
                <TextField fx:id="nomField" prefWidth="75.0" promptText="Nom"/>
                <TextField fx:id="descriptionField" prefWidth="75.0" promptText="Description"/>
                <TextField fx:id="prixField" prefWidth="75.0" promptText="Prix"/>
                <TextField fx:id="quantiteField" prefWidth="75.0" promptText="Quantite"/>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddProduit" text="Add"/>
                <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditProduit" text="Edit"/>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteProduit" text="Delete"/>
            </children>
        </HBox>
    </children>
</AnchorPane>




